<%= render 'shared/user_errors', obj: @recipe %>

<div class="bg-faded p-4 my-4">
  <hr class="divider">
	<%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group ">
			<div class="control-label col-md-2">
				<%= f.label :ingredient %>
			</div>
			<div class="col-md-offset-2 col-md-10">
				<%= f.text_field :ingredient, class: "form-control", placeholder: "Primary Ingredient", autofocus: true %>
			</div>
		</div>
		<div class="form-group ">
			<div class="control-label col-md-2">
				<%= f.label :name %>
			</div>
			<div class="col-md-offset-2 col-md-10">
				<%= f.text_field :recipeName, class: "form-control", placeholder: "Recipe Name", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-md-offset-2 col-md-2">
				<%= f.label :description %>
			</div>
			<div class="col-md-offset-2 col-md-10">
				<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter a description of your recipe" %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-md-offset-2 col-md-2">
				<%= f.label :instructions %>
			</div>
			<div class="col-md-offset-2 col-md-10">
				<%= f.trix_editor :instructions, placeholder: "Enter your instructions here...." %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<%= f.submit class: "btn btn-warning btn-color" %>
			</div>
		</div>
	<% end %>
	<div class="text-center color-match">
		<small class= "color-match"><%= link_to "Cancel submission and return to recipes listing", recipes_path, class: "btn btn-secondary btn-sm" %></small>
	</div>
</div>