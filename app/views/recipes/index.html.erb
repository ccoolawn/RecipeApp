<div class="bg-faded p-4 my-4">
  <hr class="divider">
	<h2 class="text-center">List of All Recipes</h2>
</div>

<% @recipes.each do |recipe| %>
	<div class="bg-faded p-4 my-4">
	  <hr class="divider">
	  <h2 class="text-center text-lg text-uppercase my-0"><%= recipe.recipeName %></h2>
	  <hr class="divider">
	  <img class="img-fluid float-left mr-4 d-none d-lg-block" src="img/intro-pic.jpg" alt="">
	  <p class="text-center"><%= truncate(recipe.description, length: 150) %></p>
	  <p class="text-center">
	  	<span class="quiet">
	  	 <small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small>
	  	</span>
	  </p>
	</div>
<% end %>