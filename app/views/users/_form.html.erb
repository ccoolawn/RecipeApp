<%= render 'shared/user_errors', obj: @user %>
<div class="wrapper">
	<%= form_for(@user, :html => {class: "form-signin bg-faded", role: "form"}) do |f| %>
		<h2 class="form-signin-heading"><%= render 'shared/page_title', title: (@user.new_record? ? "Sign Up" : " Edit Profile") %></h2>
		<%= f.text_field :firstname, class: "form-control", placeholder: "First Name", autofocus: true %>
		<%= f.text_field :lastname, class: "form-control", placeholder: "Last Name", autofocus: true %>
		<%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
		<%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
		<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confim Password" %>

		<div class="text-center">
			<%= f.submit(@user.new_record? ? "Create my Account" : "Update my Account", class: "btn btn-warning btn-color") %>
		</div>
	<% end %>
</div>